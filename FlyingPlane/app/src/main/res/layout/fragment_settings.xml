<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg_menu"
    android:layout_height="match_parent">

    <com.fly.flyingplane.core.CustomButton
        android:id="@+id/soundBtn"
        style="@style/BasicText"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:background="@drawable/bg_button"
        android:textSize="22sp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/btnShot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Sound effects: On" />

    <com.fly.flyingplane.core.CustomButton
        android:id="@+id/btnShot"
        style="@style/BasicText"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:textSize="22sp"
        android:background="@drawable/bg_button"
        tools:text="Shot sound: On"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.fly.flyingplane.core.CustomButton
        android:id="@+id/btnMusic"
        style="@style/BasicText"
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:background="@drawable/bg_button"
        android:textSize="22sp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShot"
        tools:text="Music: On" />

    <com.fly.flyingplane.core.CustomButton
        android:id="@+id/btnback"
        style="@style/BasicText"
        android:layout_margin="12dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_button"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/back" />

</androidx.constraintlayout.widget.ConstraintLayout>